{
	"name": "flint",
	"version": "0.11.0",
	"description": "[Experimental] A fast, friendly linter. ❤️‍🔥",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JoshuaKGoldberg/flint.git"
	},
	"license": "MIT",
	"author": {
		"name": "Josh Goldberg ✨",
		"email": "npm@joshuakgoldberg.com"
	},
	"type": "module",
	"main": "lib/index.js",
	"bin": "bin/index.js",
	"files": [
		"LICENSE.md",
		"README.md",
		"bin/index.js",
		"lib/",
		"package.json"
	],
	"scripts": {
		"build": "tsdown",
		"flint": "node bin/index.js",
		"lint": "eslint . --max-warnings 0",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"prepare": "husky",
		"test": "vitest --typecheck",
		"tsc": "tsc"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"@types/unist": "^3.0.3",
		"@typescript-eslint/project-service": "^8.35.0",
		"@typescript/vfs": "^1.6.1",
		"cached-factory": "^0.1.0",
		"debug-for-file": "^0.2.0",
		"omit-empty": "^1.0.0",
		"remark-parse": "^11.0.0",
		"text-table-fast": "^0.1.0",
		"ts-api-utils": "^2.1.0",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"vfile": "^6.0.3",
		"vfile-location": "^5.0.3",
		"yaml-unist-parser": "^2.0.5",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "4.5.0",
		"@eslint/js": "9.29.0",
		"@release-it/conventional-changelog": "10.0.1",
		"@types/eslint-plugin-markdown": "2.0.2",
		"@types/mdast": "4.0.4",
		"@types/node": "24.0.4",
		"@types/omit-empty": "1.0.4",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/eslint-plugin": "1.2.7",
		"console-fail-test": "0.5.0",
		"cspell": "9.1.2",
		"eslint": "9.29.0",
		"eslint-plugin-jsdoc": "51.2.3",
		"eslint-plugin-jsonc": "2.20.1",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "17.20.0",
		"eslint-plugin-package-json": "0.42.0",
		"eslint-plugin-perfectionist": "4.15.0",
		"eslint-plugin-regexp": "2.9.0",
		"eslint-plugin-yml": "1.18.0",
		"husky": "9.1.7",
		"knip": "5.61.2",
		"lint-staged": "16.1.2",
		"markdownlint": "0.38.0",
		"markdownlint-cli": "0.45.0",
		"prettier": "3.6.1",
		"prettier-plugin-curly": "0.3.2",
		"prettier-plugin-packagejson": "2.5.15",
		"prettier-plugin-sh": "0.18.0",
		"release-it": "19.0.3",
		"sentences-per-line": "0.3.0",
		"tsdown": "0.12.9",
		"typescript": "5.8.3",
		"typescript-eslint": "8.35.0",
		"vitest": "3.2.4"
	},
	"peerDependencies": {
		"typescript": ">=5.8.0"
	},
	"packageManager": "pnpm@10.12.3",
	"engines": {
		"node": ">=24.0.0"
	},
	"publishConfig": {
		"provenance": true
	}
}
