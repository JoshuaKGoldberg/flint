---
import TeamBio, { type Props as BioEntry } from "./TeamBio.astro";

interface Props {
	bios: BioEntry[];
}

const { bios } = Astro.props;
---

<ul class="team-bio-list">
	{bios.map((bio) => <TeamBio {...bio} />)}
</ul>

<style>
	.team-bio-list {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		gap: 1.5rem;
		padding: 1rem 0 0 0;
	}
</style>
