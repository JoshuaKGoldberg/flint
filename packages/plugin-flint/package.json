{
	"name": "@flint.fyi/plugin-flint",
	"version": "0.2.1",
	"description": "[Experimental] A Flint plugin for linting Flint plugins.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JoshuaKGoldberg/flint.git",
		"directory": "packages/plugin-flint"
	},
	"license": "MIT",
	"author": {
		"name": "JoshuaKGoldberg",
		"email": "npm@joshuakgoldberg.com"
	},
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"@flint.fyi/source": {
				"types": "./.tsbuildinfo/types/src/index.d.ts",
				"default": "./src/index.ts"
			},
			"default": "./lib/index.js"
		}
	},
	"files": [
		"lib/",
		"!lib/**/*.map"
	],
	"dependencies": {
		"@flint.fyi/core": "workspace:",
		"@flint.fyi/ts": "workspace:",
		"@flint.fyi/utils": "workspace:",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@flint.fyi/rule-tester": "workspace:",
		"tsdown": "0.18.3",
		"vitest": "4.0.15"
	},
	"engines": {
		"node": ">=24.0.0"
	},
	"publishConfig": {
		"access": "public",
		"exports": {
			".": "./lib/index.js"
		},
		"provenance": true
	}
}
